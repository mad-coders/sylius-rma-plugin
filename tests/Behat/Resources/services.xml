<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <!-- contexts -->
        <service id="madcoders.rma.context.setup.order" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Context\Setup\OrderContext">
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="sylius.factory.shipment" />
        </service>

        <service id="madcoders.rma.context.setup.auth" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Context\Setup\AuthContext">
            <argument type="service" id="madcoders_rma.repository.authcode" />
        </service>

        <service id="madcoders.rma.context.setup.return_reason" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Context\Setup\ReturnReasonContext">
            <argument type="service" id="madcoders_rma.repository.order_return_reason" />
        </service>

        <service id="madcoders.rma.context.ui.shop.welcome" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Context\Ui\Shop\CreditsContext">
            <argument type="service" id="madcoders.rma.page.shop.credits" />
        </service>

        <service id="madcoders.rma.context.ui.shop.rma.auth" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Context\Ui\Shop\Rma\AuthContext">
            <argument type="service" id="madcoders.rma.page.shop.rma.start" />
            <argument type="service" id="madcoders.rma.page.shop.rma.auth" />
            <argument type="service" id="madcoders_rma.repository.authcode" />
            <argument type="service" id="sylius.behat.email_checker" />
            <argument type="service" id="translator" />
        </service>

        <service id="madcoders.rma.context.ui.shop.rma.return_form" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Context\Ui\Shop\Rma\ReturnFormContext">
            <argument type="service" id="madcoders.rma.page.shop.rma.return_form" />
        </service>

        <!-- pages -->
        <service id="madcoders.rma.page.shop.rma.start" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Page\Shop\Rma\StartPage" parent="sylius.behat.symfony_page" public="false" />
        <service id="madcoders.rma.page.shop.rma.auth" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Page\Shop\Rma\AuthPage" parent="sylius.behat.symfony_page" public="false" />
        <service id="madcoders.rma.page.shop.rma.return_form" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Page\Shop\Rma\ReturnFormPage" parent="sylius.behat.symfony_page" public="false" />

        <service id="madcoders.rma.page.shop.credits" class="Tests\Madcoders\SyliusRmaPlugin\Behat\Page\Shop\CreditsPage" parent="sylius.behat.symfony_page" public="false" />
    </services>
</container>
