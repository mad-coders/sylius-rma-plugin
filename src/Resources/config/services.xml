<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="services/**/*.xml" />
    </imports>

    <services>
        <service id="madcoders.sylius_rma_plugin.services.max_qty_calculator" class="Madcoders\SyliusRmaPlugin\Services\MaxQtyCalculator">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="madcoders.sylius_rma_plugin.return_request_builder" class="Madcoders\SyliusRmaPlugin\Services\ReturnRequestBuilder">
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="madcoders_rma.repository.order_return" />
            <argument type="service" id="madcoders.sylius_rma_plugin.generator.return_number_generator" />
            <argument type="service" id="madcoders.sylius_rma_plugin.services.max_qty_calculator" />
        </service>

        <service id="madcoders.sylius_rma_plugin.rma_product_view_extension" class="Madcoders\SyliusRmaPlugin\Twig\RmaProductViewExtension">
            <argument type="service" id="sylius.repository.product_variant" />
            <tag name="twig.extension"/>
        </service>

        <service id="madcoders.sylius_rma_plugin.twig.rma_order_view_extension" class="Madcoders\SyliusRmaPlugin\Twig\RmaOrderViewExtension">
            <argument type="service" id="sylius.repository.order" />
            <tag name="twig.extension"/>
        </service>

    </services>
</container>
