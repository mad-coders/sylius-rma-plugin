<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autoconfigure="true" autowire="true" public="true" />

        <service id="madcoders.sylius_rma_plugin.controller.auth_controller" class="Madcoders\SyliusRmaPlugin\Controller\AuthController">
            <argument type="service" id="form.factory" />
            <argument type="service" id="twig" />
            <argument id="sylius.context.channel" />
            <argument type="service" id="router" />
            <argument type="service" id="madcoders.sylius_rma_plugin.email.authcode_email_sender" />
            <argument type="service" id="session" />
        </service>

        <service id="madcoders.sylius_rma_plugin.controller.return_controller" class="Madcoders\SyliusRmaPlugin\Controller\ReturnController">
            <argument type="service" id="form.factory" />
            <argument type="service" id="twig" />
            <argument id="sylius.context.channel" />
            <argument type="service" id="router" />
            <argument type="service" id="session" />
            <argument type="service" id="madcoders.sylius_rma_plugin.return_request_builder" />
        </service>

    </services>
</container>
