{% extends '@SyliusShop/layout.html.twig' %}

{% form_theme form '@SyliusShop/Form/theme.html.twig' %}

{% block title %} {{ 'sylius.ui.return'|trans }} {% endblock %}

{% block content %}
    <div class="ui hidden divider"></div>
    <div class="ui one column centered stackable grid">
        <div class="column">
            <h1 class="ui header">
                <i class="circular truck icon"></i>
                <div class="content">
                    {{ 'madcoders_rma.ui.headline'|trans }}
                    <div class="sub header">{{ 'sylius.ui.return'|trans }}</div>
                </div>
            </h1>
            <div class="ui segment">
                {{ form_start(form, {'action': path('madcoders_rma_start'), 'attr': {'class': 'ui large loadable form', 'novalidate': 'novalidate'}}) }}
                {{ form_row(form.orderNumber, sylius_test_form_attribute('rma-order-number-field')) }}
                {{ form_row(form._token) }}
                <br/>
                <button type="submit" class="ui fluid large primary submit button" {{ sylius_test_html_attribute('rma-continue-button') }}>{{ 'madcoders_rma.ui.continue_button'|trans }}</button>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
